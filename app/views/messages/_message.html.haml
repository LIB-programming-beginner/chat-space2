.main_chat__message-list__message{data: {message: {id: message.id}}}
  .main_chat__message-list__message__info
    .main_chat__message-list__message__info__name
      = message.user.name
    .main_chat__message-list__message__info__date
      = message.created_at.strftime("%y年%m月%d日 %H時%M分")
  .main_chat__message-list__message__content
    - if message.content.present?
      %p.main_chat__message-list__message__content__message-text
        = message.content
    = image_tag message.image.url, class: 'main_chat__message-list__message__content__image' if message.image.present?